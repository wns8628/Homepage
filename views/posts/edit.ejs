<!-- views/posts/edit.ejs -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body class="body">
  <% include ../partials/nav %>

  <div class="container row mx-auto mid_fix_body post post-edit">

    <!--  -->
       <div class="col-sm-3 ac_parent">
         <div class="about_col">
          <div class="row">

           <div id="paper"  class="col-sm-12">
             <h2>게시판</h2>
           </div>

           <div class="col-sm-3"></div>
           <div class="col-sm-8">
             <a class="btn btn-outline-success btn-lg btn-block Writing" href="/posts/new">글쓰기
               <span class="badge badge-pill badge-success">Go!</span>
             </a>
           </div>

           <div class="col-sm-3"></div>
           <div class="col-sm-8">
              <% include ./partials/nav ﻿%>
           </div>

         </div>
       </div>
      </div>
    <!--  -->
    <div class="col-sm-9 sb_parent">
      <div class="showBody">
       <div class="buttons">
        <a class="btn btn-default" href="/posts">Back</a>
       </div>

       <form class="post-form form-horizontal" action="/posts/<%= post._id %>?_method=put" method="post">
        <div class="contentBox">
         <h3 class="contentBoxTop">글 수정</h3>
         <fieldset class="fieldset">
          <div class="form-group <%= (errors.title)?'has-error':'' %>">
           <label for="title" class="col-sm-2 control-label editset">제목</label>
           <div class="col-sm-12 editset">
            <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>">
            <% if(errors.title){ %>
             <span class="help-block"><%= errors.title.message %></span>
            <% } %>
           </div>
          </div>
          <div class="form-group <%= (errors.body)?'has-error':'' %>">
           <label for="body" class="col-sm-2 control-label editset">본문</label>
           <div class="col-sm-12 editset">
             <!--  -->
            <textarea class="form-control" id="summernote" name="body" rows="5"><%= post.body %></textarea>
             <!--  -->
            <% if(errors.body){ %>
             <span class="help-block"><%= errors.body.message %></span>
            <% } %>
           </div>
          </div>
         </fieldset>
        </div>
        <div class="buttons write_btn">
         <button type="submit" class="btn btn-default right_button_set">완료</button>
        </div>
        <% if(errors.unhandled){ %>
         <div class="alert alert-danger">
          <%= errors.unhandled %>
         </div>
        <% } %>
       </form>
     </div>
   </div>
  </div> <!-- container end -->
  <footer>
    <% include ../partials/footer %>
  </footer>
 </body>
</html>
