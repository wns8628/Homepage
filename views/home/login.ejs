<!-- views/home/login.ejs -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body class="body">
  <% include ../partials/nav %>
<div class="user_body">

  <div class="container home home-login">

   <form class="login-form form-horizontal" action="/login" method="post">
    <div class="contentBoxUser">
      <div class="col-sm-12 usershowtitle">
        <%=Site_name %>
      </div>

     <fieldset>
      <div class="form-group <%= (errors.username)?'has-error':'' %>">
       <label for="username" class="col-sm-3 control-label">ID</label>
       <div class="col-sm-12">
        <input class="form-control" type="text" id="username" name="username" value="<%= username %>">
        <% if(errors.username){ %>
         <span class="help-block"><%= errors.username %></span>
        <% } %>
       </div>
      </div>
      <div class="form-group <%= (errors.password)?'has-error':'' %>">
       <label for="password" class="col-sm-3 control-label">Password</label>
       <div class="col-sm-12">
        <input class="form-control" type="password" id="password" name="password" value="">
        <% if(errors.password){ %>
         <span class="help-block"><%= errors.password %></span>
        <% } %>
       </div>
      </div>
      <% if(errors.login){ %>
       <div class="has-error">
        <span class="help-block"><%= errors.login %></span>
       </div>
      <% } %>
     </fieldset>
    </div>
    <div class="buttons">
      <a class="btn btn-default" href="/users/new">회원가입</a>
     <input class="btn btn-default main_login" type="submit" value="로그인">
    </div>
   </form>

  </div> <!-- container end -->
</div>
  <footer>
    <% include ../partials/footer %>
  </footer>
 </body>
</html>
