<!-- views/users/show.ejs -->
<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body class="body">
  <% include ../partials/nav %>
<div class="user_body">
 <div class="row container mx-auto user user-show">
   <div class="usershowbody row col-sm-12">
    <div class="col-sm-12 usershowtitle">
      <%=Site_name %>
    </div>
    <div class="buttons col-sm-12">
      <a class="btn btn-default" href="/users">Back</a>
      <a class="btn btn-default" href="/users/<%= user.username %>/edit">수정</a>
    </div>
     <div class="col-sm-6">
      <form class="user-form form-horizontal" action="/users" method="post">
       <div class="contentBoxUser">
        <h3 class="contentBoxTop">내 정보 ( <%= user.username %> )</h3>
        <fieldset disabled>
         <div class="form-group">
          <label for="name" class="col-sm-3">총 방문</label>
          <div class="col-sm-9">
           <input class="form-control" type="text" id="name" name="name" value="아직안함">
          </div>
         </div>
         <div class="form-group">
          <label for="email" class="col-sm-3">총 게시글</label>
          <div class="col-sm-9">
           <input class="form-control" type="text" id="email" name="email" value="아직안함">
          </div>
         </div>
         <div class="form-group">
          <label for="email" class="col-sm-3">총 댓글</label>
          <div class="col-sm-9">
           <input class="form-control" type="text" id="email" name="email" value="아직안함">
          </div>
         </div>

        </fieldset>
       </div>
      </form>
    </div>

    <div class="col-sm-6">
     <form class="user-form form-horizontal" action="/users" method="post">
      <div class="contentBoxUser">
       <h3 class="contentBoxTop">프로필</h3>
       <fieldset disabled>
        <div class="form-group">
         <label for="name" class="col-sm-3">아이디</label>
         <div class="col-sm-9">
          <input class="form-control" type="text" id="name" name="name" value="<%= user.username %>">
         </div>
        </div>
        <div class="form-group">
         <label for="email" class="col-sm-3">닉네임</label>
         <div class="col-sm-9">
          <input class="form-control" type="text" id="email" name="email" value="<%= user.name %>">
         </div>
        </div>
       </fieldset>
      </div>
     </form>
   </div>

  <div class="col-sm-6">
    <form class="user-form form-horizontal" action="/users" method="post">
     <div class="contentBoxUser">
      <h3 class="contentBoxTop">연락처</h3>
      <fieldset disabled>
       <div class="form-group">
        <label for="name" class="col-sm-3">휴대전화</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="name" name="name" value="입력 안받음">
        </div>
       </div>
       <div class="form-group">
        <label for="email" class="col-sm-3">Email</label>
        <div class="col-sm-9">
         <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
        </div>
       </div>
      </fieldset>
     </div>
    </form>
  </div>

  <div class="col-sm-6">
   <form class="user-form form-horizontal" action="/users" method="post">
    <div class="contentBoxUser">
     <h3 class="contentBoxTop">지역</h3>
     <fieldset disabled>
      <div class="form-group">
       <label for="name" class="col-sm-3">주소</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="name" name="name" value="입력 안받음">
       </div>
      </div>
      <div class="form-group">
       <label for="email" class="col-sm-3">직장</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="email" name="email" value="입력 안받음">
       </div>
      </div>
     </fieldset>
    </div>
   </form>
  </div>
 </div>
</div>
</div>
<footer>
  <% include ../partials/footer %>
</footer>
 </body>
</html>
